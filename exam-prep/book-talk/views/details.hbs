<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{title}} </h2>
            <h3>Author: {{author}} </h3>
            <h3>Stars: {{stars}}</h3>
            <h3>Genre: {{genre}}</h3>
            <h3>Review: {{bookReview}}
            </h3>

            {{#if user}}

            {{#if isOwner}}
            <!-- If there is no registered user, do not display buttons-->
            <div class="buttons">
                <!-- Only for registered user and author of the review -->
                <a href="/details/{{_id}}/edit" class="btn-edit">Edit</a>
                <a href="/details/{{_id}}/delete" class="btn-delete">Delete</a>
                {{else if isWished}}
                <!-- logged in user who has already wished book-->
                <p class="wish-pub">You already added the book to your wish list</p>
                {{else}}
                <!-- logged in user who has not yet wished book-->
                <a href="/details/{{_id}}/wish" class="btn-wish">Wish to read</a>
            </div>
            {{/if}}
            
            {{/if}}
        </article>

        <article class="details-card-image">
            <img src={{image}}>
        </article>

    </article>
</section>