<!-- Register Page (Only for Guest users) -->
<section id="register">
    <div class="form" method="POST">
        <h2>Register</h2>
        <form class="login-form" method="" action="#">
            <input type="text" name="register" id="register-email" placeholder="email" value="{{register}}" />
            <input type="password" name="password" id="register-password" placeholder="password" />
            <input type="password" name="repass" id="repeat-password" placeholder="repeat password" />
            <button type="submit">Register</button>
            <p class="message">Already registered? <a href="/auth/login">Login</a></p>
        </form>
    </div>
</section>