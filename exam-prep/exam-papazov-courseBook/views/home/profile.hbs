<section id="user">
    <div class="user-info">
        <div class="user-logo">
            <img
                src="https://scontent-sof1-1.xx.fbcdn.net/v/t1.6435-9/122159855_1591427501018038_6210126498541753600_n.jpg?_nc_cat=101&ccb=1-7&_nc_sid=5f2048&_nc_ohc=v766f_BYgs4Q7kNvgGTellk&_nc_ht=scontent-sof1-1.xx&oh=00_AYDZuYkXHiuok9TLHOz_xxIoirX4GNfo5ts26senAG-4wA&oe=66979703">
        </div>
        <h1 class="user-email">{{user.email}}</h1>
        <h2 class="created-course-count">Total Created Course: {{cCourses.length}}</h2>
        <h2 class="sign-course-count">Total Sign up Course: {{signCourses.length}}</h2>
    </div>
</section>
<section class="profile-course">
    <div class="created-course">
        <h2 class="section-title">Created Course</h2>
        {{#each cCourses}}
        <div class="info">
            <h2 class="title">{{title}}</h2>
            <h4 class="genre">Type: {{type}}</h4>
            <div class="learn-more">
                <a href="/courses/{{_id}}/details">Learn More...</a>
            </div>
        </div>
        {{else}}
        <h2 class="no-course-in-profile">You haven't created a course yet...</h2>
        {{/each}}
    </div>
    </div>

    <div class="sign-course">
        <h2 class="section-title">Sign Up Course</h2>
        <div class="info">
            {{#each signCourses}}
            <h2 class="title">{{title}}</h2>
            <h4 class="genre">Type: {{type}}</h4>
            <h4 class="certificate">Certificate: {{certificate}}</h4>
            <div class="learn-more">
                <a href="/courses/{{_id}}/details">Learn More...</a>
            </div>
            {{else}}
            <h2 class="no-course-in-profile">You haven't signed up for any course yet...</h2>
            {{/each}}
        </div>
    </div>

</section>